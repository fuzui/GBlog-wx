<cu-custom bgImage="{{topImage}}" isCustom="{{true}}">
  <view slot="content">友链</view>
</cu-custom>
<view class="cu-chat-i">
  <view class="cu-item" wx:for="{{links}}" wx:for-item="item" wx:key="index">
    <view class="cu-avatar radius" style="background-image:url({{item.logo?item.logo:'https://ossweb-img.qq.com/images/lol/web201310/skin/big143004.jpg'}});"></view>
    <view class="main">
      <view class="content bg-{{bgColor[index%6]}} shadow">
        <view >{{item.name}}</view>
        <view class="text-sm">{{item.description}}</view>
      </view>
    </view>
    <view class="date">{{item.url}}</view>
  </view>
</view>
<!-- 加载框 -->
<view class='cu-load load-modal' wx:if="{{loadModal}}">
  <image src="{{logo}}" class='png' mode='aspectFit'></image>
  <view class='gray-text'>加载中...</view>
</view>
