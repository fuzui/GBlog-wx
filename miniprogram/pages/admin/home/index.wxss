.UCenter-bg {
  
  background-size: cover;
  height: 397rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}
.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg .avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius:50%;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}
/* 图标 */
.cu-list.menu>.cu-item .content>image {
  display: inline-block;
  margin-left: 8rpx;
	margin-right: 12rpx;
	width: 1.3em;
	height: 1.3em;
	vertical-align: middle
}

.cu-bar.btn-group button {
  padding: 20rpx 32rpx;
  flex: 1;
	margin: 0 20rpx;
	max-width: 80%;
}